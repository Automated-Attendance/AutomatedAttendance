extends layout

block content  
  div(id="root" style="width: 280px; margin: 40px auto; padding: 10px;")

  script.

    var options = {
      auth: {
        redirectUrl: '#{env.AUTH0_CALLBACK_URL}',
        responseType: 'code',
        params: {
          scope: 'openid name email picture'
        }
      },
      closable: false,
      theme: {
      logo: 'https://res.cloudinary.com/automatedattendance/image/upload/v1493074640/roundedLogo_qvyihi.png'
      },
      languageDictionary: {
        title: 'Automated Attendance'
      }
    }
    var lock = new Auth0Lock('#{env.AUTH0_CLIENT_ID}', '#{env.AUTH0_DOMAIN}', options);
    lock.show();